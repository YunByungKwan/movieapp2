<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_movie_list">

    <fragment
        android:id="@+id/nav_movie_list"
        android:name="com.kwancorp.movieapp2.ui.movielist.MovieListFragment"
        android:label="@string/menu_movie_list"
        tools:layout="@layout/frag_movie_list" >
        <action
            android:id="@+id/act_nav_movie_list_to_detail"
            app:destination="@id/nav_movie_detail" />
    </fragment>

    <fragment
        android:id="@+id/nav_movie_detail"
        android:name="com.kwancorp.movieapp2.ui.moviedetail.MovieDetailFragment"
        android:label="@string/menu_movie_detail"
        tools:layout="@layout/frag_movie_detail" >
    </fragment>

    <fragment
        android:id="@+id/nav_movie_api"
        android:name="com.kwancorp.movieapp2.ui.movieapi.MovieApiFragment"
        android:label="@string/menu_movie_api"
        tools:layout="@layout/frag_movie_api" >
    </fragment>

    <fragment
        android:id="@+id/nav_movie_book"
        android:name="com.kwancorp.movieapp2.ui.moviebook.MovieBookFragment"
        android:label="@string/menu_movie_book"
        tools:layout="@layout/frag_movie_book" >
    </fragment>

</navigation>